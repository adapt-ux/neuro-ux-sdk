  "keywords": [
    "svelte",
    "svelte-components",
    "ui-components",
    "web-components",
    "adaptive-ui",
    "a11y",
    "accessibility",
    "neurodiversity"
  ],
  "license": "MIT",
  "author": "AdaptUX",
